      base      >= 3   && < 5
    , vector    >= 0.5 && <= 0.13
    , containers
    , pgf2
    
  Build-Tools:     hsc2hs
  Extra-Libraries: m
  if flag(Debug)
    CPP-Options: -DDEBUG
  hs-Source-Dirs: src/
